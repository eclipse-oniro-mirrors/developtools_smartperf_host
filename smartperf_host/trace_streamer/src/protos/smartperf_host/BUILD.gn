import("//build/ohos.gni")
import("../protos.gni")

#######################################################
proto_out_dir = "$root_gen_dir/cpp/" + rebase_path(".", "//")
proto_rel_out_dir = rebase_path(proto_out_dir, root_build_dir)
config("public_configs") {
  include_dirs = [ "$proto_out_dir" ]
}

#######################################################
all_sph_proto = [ "./sph_data.proto" ]

all_sph_codegen = []
all_sph_codegen_standard = []
all_sph_codegen_reader = []
all_sph_codegen_all = []
foreach(proto, all_sph_proto) {
  name = get_path_info(proto, "name")
  all_sph_codegen += [
    "$proto_out_dir/$name.pb.h",
    "$proto_out_dir/$name.pb.cc",
  ]
  all_sph_codegen_reader += [ "$proto_out_dir/$name.pbreader.h" ]
}
all_sph_codegen_all += all_sph_codegen
all_sph_codegen_all += all_sph_codegen_standard
all_sph_codegen_all += all_sph_codegen_reader

action("ts_all_sph_gen") {
  script = "${OHOS_TRACE_STREAMER_DIR_PROTOC}"
  sources = all_sph_proto
  outputs = all_sph_codegen_all
  args = [
    "$libc_dir_proto",
    "$root_output_dir_proto",
    "$proto_rel_out_dir",  # standard proto file destination path
    "--cpp_out",
    "$proto_rel_out_dir",
    "--proto_path",
    rebase_path(".", root_build_dir),
  ]
  args += rebase_path(sources, root_build_dir)
  if (!use_wasm && !is_test && !is_fuzz) {
    deps = [
      "${OHOS_TRACE_STREAMER_PROTOS_DIR}/protos:protoc(${host_toolchain})",
      "${SRC}/proto_reader/protoc_plugin:protoreader_plugin(${host_toolchain})",
    ]
  }
}

ohos_source_set("ts_all_sph_cpp") {
  subsystem_name = "${OHOS_PROFILER_SUBSYS_NAME}"
  part_name = "${OHOS_PROFILER_PART_NAME}"
  deps = [ ":ts_all_sph_gen" ]
  public_deps = [
    "${OHOS_TRACE_STREAMER_PROTOS_DIR}/protos:protobuf_lite_static",
    "${OHOS_TRACE_STREAMER_PROTOS_DIR}/protos:protobuf_static",
  ]
  include_dirs = [ "$proto_out_dir" ]
  public_configs = [ ":public_configs" ]
  sources = all_sph_codegen
}
ohos_source_set("ts_all_sph_cpp_standard") {
  subsystem_name = "${OHOS_PROFILER_SUBSYS_NAME}"
  part_name = "${OHOS_PROFILER_PART_NAME}"
  deps = [ ":ts_all_sph_gen" ]
  public_deps = [
    "${OHOS_TRACE_STREAMER_PROTOS_DIR}/protos:protobuf_lite_static",
    "${OHOS_TRACE_STREAMER_PROTOS_DIR}/protos:protobuf_static",
  ]
  include_dirs = [ "$proto_out_dir" ]
  public_configs = [ ":public_configs" ]
  sources = all_sph_codegen_standard
  subsystem_name = "${OHOS_PROFILER_SUBSYS_NAME}"
  part_name = "${OHOS_PROFILER_PART_NAME}"
}
