    "ipc:ipc_core",
    "libpng:libpng",
    "samgr:samgr_proxy",
    "window_manager:libdm",
    "window_manager:libwm",
  ]
  defines = [
    "HI_LOG_ENABLE",
    "LOG_DOMAIN = 0xD004100",
  ]
  if (smartperf_arkxtest_able) {
    external_deps += [ "arkxtest:test_server_client" ]
    defines += [ "ARKTEST_ENABLE" ]
  }
}
