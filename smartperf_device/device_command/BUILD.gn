config("config") {
  visibility = [ ":*" ]

  cflags = [
    "-Wall",
    "-Werror",
    "-g3",
    "-Wunused-variable",
    "-Wno-unused-but-set-variable",
  ]
  cflags_cc = [ "-fexceptions" ]
}

config("public_config") {
  include_dirs = [
    ".",
    "include",
    "interface",
    "cmds",
    "cmds/include",
    "collector",
    "collector/include",
    "scenarios",
    "scenarios/include",
    "services/ipc",
    "services/ipc/include",
    "services/task_mgr",
    "services/task_mgr/include",
    "utils",
    "utils/include",
  ]
}

ohos_shared_headers("smartperf_daemon") {
  include_dirs = [
    "interface"
  ]

  subsystem_name = "${OHOS_SMARTPERF_DEVICE_SUBSYS_NAME}"
  part_name = "${OHOS_SMARTPERF_DEVICE_PART_NAME}"
}

ohos_executable("SP_daemon") {
  sources = [
    "collector/src/AI_schedule.cpp",
